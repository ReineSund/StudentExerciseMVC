@{
}

@model MovieViewModel

<h1>Create</h1>
<hr />
<div class="row">
  <div class="col-6">
    <div class="card">
      <div class="card-header">
        <h4>Create a new movie</h4>
      </div>
      <div class="card-body">
              <form asp-controller="Movie" asp-action="CreateMovie" method="post">
                  <div class="mb-3">
                      <label class="form-label">Movie Title:</label>
                      <input asp-for=MovieTitle type="text" class="form-control" />
                  </div>
                  <div class="mb-3">
                      <label class="form-label">Director:</label>
                      <input asp-for=Director type="text" class="form-control" />
                  </div>
                  <div class="mb-3">
                      <label class="form-label">Year:</label>
                      <input asp-for=Year type="number" class="form-control" />
                  </div>
                  <div class="mb-3">
                    <button type="submit" class="btn btn-primary">Save</button>
                  </div>
              </form>
          </div>
      <div class="card-footer">

      </div>
    </div>
  </div>
</div>

